<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="AttackArmyTable" layoutY="25.0" prefHeight="175.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="attUnit" prefWidth="75.0" text="Unit" />
          <TableColumn fx:id="attAmount" prefWidth="75.0" text="Amount" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <TableView fx:id="DefenceArmyTable" layoutX="300.0" layoutY="25.0" prefHeight="175.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="defUnit" prefWidth="75.0" text="Unit" />
          <TableColumn fx:id="defAmount" prefWidth="75.0" text="Amount" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="battleButton" layoutX="224.0" layoutY="38.0" mnemonicParsing="false" text="Battle" />
      <Label fx:id="whoWon" layoutX="215.0" layoutY="93.0" prefHeight="41.0" prefWidth="64.0" />
      <Label layoutX="68.0" layoutY="6.0" text="Attack Army" />
      <Label layoutX="363.0" layoutY="6.0" text="Defence Army" />
      <Button fx:id="closeWAR" layoutX="226.0" layoutY="161.0" mnemonicParsing="false" text="close" />
   </children>
</AnchorPane>
